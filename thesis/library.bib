@article{Haddrell2001,
abstract = {This paper describes the evolution of the Parthus Technologies GPS$\backslash$n3000 Receiver in order to track GPS signals inside buildings and$\backslash$nprovide location solutions. GPS300 is available as Intellectual Property$\backslash$n(IP), which is integratable into cellular telephones and PDA's. It$\backslash$nis necessary to be able to measure the GPS signal indoors in order$\backslash$nto understand its structure and characteristics. The development$\backslash$nof the Indoor Signal Sensor (ISS) GPS receiver was completed for$\backslash$nthis purpose. This receiver uses two antenna's and two RF front ends.$\backslash$nOne antenna was placed outside or in a reference position allowing$\backslash$nGPS signals to be acquired by conventional techniques. The other$\backslash$nantenna was placed indoors at the location where the GPS signal was$\backslash$nto be characterized. Using the reference code and carrier from the$\backslash$ntracked (outside) signal, the code and carrier for the indoor signal$\backslash$ncould be generated, such that long integration periods could be achieved,$\backslash$nwith coherent signal integration, relative to the outside antenna.$\backslash$nTwelve physical channels were assigned to the indoor antenna, with$\backslash$nvariable and selectable code delays relative to the outdoor signal.$\backslash$nThis technique provided real-time measurements of indoor GPS signals,$\backslash$nfor multiple code delays, and for various coherent integration times.$\backslash$nThe fundamental "Integrate and Dump" correlation time was set to$\backslash$nbe 125 microseconds. Each code delay correlator sample of the indoor$\backslash$nsignal was normalized against the outside signal to remove the effects$\backslash$nof the 50 bits per second GPS data message. Each channel thus produced$\backslash$na relative code magnitude and carrier phase measurement. Internally,$\backslash$nsamples were accumulated over periods ranging from 1 millisecond$\backslash$nto 4 seconds. Longer integration times are simply a convenient method$\backslash$nof measuring the indoor GPS signal relative to the outside signal.$\backslash$nThe receiver was enabled to output the results both in real-time$\backslash$nand in a format suitable for post processing. The real-time output$\backslash$nconsisted of D/A outputs to drive a standard oscilloscope. The Y-axis$\backslash$nwas used to display signal magnitude, relative carrier phase and$\backslash$nraw I and Q correlator counts, verses the code delay on the X-axis.$\backslash$nActual video clips of the oscillator display are included in the$\backslash$naccompanying presentation of the paper. The video clips show the$\backslash$nconstitution of the GPS signal under several conditions including$\backslash$nstationary and slow moving antenna positions. The effects of multiple$\backslash$nsignal paths, standing waves, and the corresponding carrier phase$\backslash$nrelationships can be clearly seen. For more formal data collection,$\backslash$nsuitable for postprocessing, the receiver outputs text messages containing$\backslash$nraw correlator counts, or relative signal strength, for all code$\backslash$ndelays. This data is captured on a PC and processed by a variety$\backslash$nof means including Matlab and Excel to produce two and three dimensional$\backslash$nplots. To conclude, the results of several environments are illustrated$\backslash$nand discussed. The most important characteristics of indoor GPS signals$\backslash$nare identified. Examples of standing wave patterns, multiple signal$\backslash$npathways and general signal attenuation are given, and the optimum$\backslash$ncoherent and incoherent integrations times estimated.},
author = {Haddrell, T and Pratt, A R},
journal = {Proceedings of the 14th International Technical Meeting of the Satellite Division of The Institute of Navigation ION GPS 2001},
title = {{Understanding The Indoor GPS Signal}},
year = {2001}
}
